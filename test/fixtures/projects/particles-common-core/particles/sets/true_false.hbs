{{parameter 'true_false' logicalId=parameterLogicalId}}
{{#if conditionLogicalId}}
  {{condition 'is_true' logicalId=conditionLogicalId }}
  {{condition 'is_false' logicalId=(concat 'Not' conditionLogicalId)}}
{{else}}
  {{condition 'is_true' logicalId=(concat parameterLogicalId 'IsTrueCondition') }}
  {{condition 'is_false' logicalId=(concat parameterLogicalId 'IsFalseCondition') }}
{{/if}}
